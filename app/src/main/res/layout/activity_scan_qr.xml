<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fabian.chsapp.ScanQrActivity">

    <SurfaceView
        android:id="@+id/camerapreview"
        android:layout_width="411dp"
        android:layout_height="499dp"
        android:layout_centerInParent="true"></SurfaceView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camerapreview"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="Please focus on QR code"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints"></TextView>

    <Button
        android:id="@+id/send"
        android:layout_width="112dp"
        android:layout_height="59dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="44dp"
        android:onClick="onSendClicked"
        android:text="@string/send"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/open"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="539dp" />

    <Button
        android:id="@+id/open"
        android:layout_width="110dp"
        android:layout_height="59dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="48dp"
        android:onClick="onOpenClicked"
        android:text="@string/open"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
